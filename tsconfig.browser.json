{
    "compilerOptions": {
        "module": "esnext",
        "strict": true,
        "moduleResolution": "node",
        "incremental": true,
        "target": "ES2021",
        "declaration": true,
        "strictFunctionTypes": true,
        "lib": [
            "ES2021",
            "DOM"
        ],
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "paths": {
            "platform/*": ["src/platform/browser/*"]
        },
        "declarationDir": "browser",

        "plugins": [
            {
                "transform": "@zerollup/ts-transform-paths",
                "exclude": ["*"]
            }
        ]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "src/platform/node"
    ]
}