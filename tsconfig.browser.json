{
    "compilerOptions": {
        "module": "esnext",
        "strict": true,
        "moduleResolution": "node",
        "incremental": true,
        "target": "ES2020",
        "declaration": true,
        "strictFunctionTypes": true,
        "lib": [
            "ES2020",
            "DOM"
        ],
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "paths": {
            "platform/*": ["src/platform/browser/*"]
        },
        "declarationDir": "browser"
    },
    "include": [
        "src"
    ],
    "exclude": [
        "src/platform/node",
        "src/index.ts"
    ]
}