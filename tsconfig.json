{
    "compilerOptions": {
        "module": "esnext",
        "strict": true,
        "moduleResolution": "node",
        "incremental": true,
        "target": "ES2020",
        "declaration": true,
        "strictFunctionTypes": true,
        "lib": [
            "ES2020"
        ],
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "outDir": "lib"
    },
    "include": [
        "src"
    ]
}